@model FoodWay.Data.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Delete";
}


<div class="panel panel-headline">
    @*<div class="panel-heading">
        </div>*@
    <div class="panel-body">
        <h2>DELETE ORDER</h2>
        <h3>Are you sure you want to delete this?</h3>
        <hr />
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Order.OrderNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Order.OrderNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Order.Customer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Order.Customer.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Order.Employee)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Order.Employee.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Order.OrderDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Order.OrderDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Order.Shipper)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Order.Shipper.Name)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Order.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>